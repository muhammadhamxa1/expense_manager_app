<p id="notice"><%= notice %></p>

<h1>Group Expenses</h1>

<table>
  <thead>
    <tr>
      <th>Group name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @group_expenses.each do |group_expense| %>
      <tr>
        <td><%= group_expense.expense_name   %></td>
        <td><%= link_to 'Show', group_expense %></td>
        <td><%= link_to 'Edit', edit_group_expense_path(group_expense) %></td>
        <td><%= link_to 'Destroy', group_expense, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

