
<div data-controller="group">
<p>
  <strong>Group name:</strong>
  <%= @group.group_name %>
</p>
<h1>Groups Users</h1>

<table>
  <thead>
    <tr>
      <th>User Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @group_members.each do |group_member| %>
      <tr>
        <td><%= group_member.user_id=User.find(group_member.user_id).email %></td>
       
      </tr>
    <% end %>
  </tbody>
</table>

    <button class="btn btn-success btn-xs"  data-action="click->group#showFields">
      Add User
    </button>
  <div data-group-target="userField">
   <%=simple_form_for(:user, html: { method: :put }) do |f|%>
       <div class="form-inputs">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
    <% end %>
  </div>
   <%# <button class="btn btn-success btn-xs"  data-action="click->group#showExpense">
      Create Expense
    </button> %>
  <%= link_to 'Create Expense',new_group_group_expense_path(@group) , class:"btn btn-success btn-xs"  %> |
</div>
